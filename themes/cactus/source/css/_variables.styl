// Fonts
$font-family-body = "Noto Serif CJK", "Noto Serif CJK TC", "Noto Serif TC", "Noto Serif", serif
$font-family-mono = "Inconsolata", monospace
$font-family-tt = "Inconsolata", sans-serif
$font-size = 18px
$line-height = 1.725
$page-width = 0rem + (hexo-config("page_width") || 39)
// Logo
$logo-width = 0px + (hexo-config("logo.width") || 0)
$logo-height = 0px + (hexo-config("logo.height") || 0)
// Colors
$colors = hexo-config("colorscheme") || "dark"
