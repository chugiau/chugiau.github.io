root = true

[*]
charset = utf-8
insert_final_newline = true

[*.md]
indent_style = space
indent_size = 2

[*.{yml,yaml,toml,ini}]
indent_style = space
indent_size = 2

[*.{html,xml}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.css]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
